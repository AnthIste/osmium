require __DIR__.'/../inc/root.php';

list($max) = pg_fetch_row(osmium_pg_query_params('SELECT COUNT(DISTINCT character_id) FROM osmium.accounts', array()));
$q = osmium_pg_query_params('SELECT DISTINCT character_id FROM osmium.accounts', array());
$i = 0;
while($r = pg_fetch_row($q)) {
  $c_id = $r[0];
  echo "\r".str_pad(++$i, strlen((string)$max), "0", STR_PAD_LEFT).'/'.$max;

  update($c_id);
}

echo "\n";

function update($c_id) {
  $char_info = osmium_api('/eve/CharacterInfo.xml.aspx', array('characterID' => $c_id));

  $character_name = (string)$char_info->result->characterName;
  $corporation_id = (int)$char_info->result->corporationID;
  $corporation_name = (string)$char_info->result->corporation;
  $alliance_id = (int)$char_info->result->allianceID;
  $alliance_name = (string)$char_info->result->alliance;
  
  if($alliance_id == 0) $alliance_id = null;
  if($alliance_name == '') $alliance_name = null;

  osmium_pg_query_params('UPDATE osmium.accounts SET character_name = $1, corporation_name = $3, corporation_id = $4, alliance_name = $5, alliance_id = $6 WHERE character_id = $2', array($character_name, $c_id, $corporation_name, $corporation_id, $alliance_name, $alliance_id));
}