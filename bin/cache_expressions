require __DIR__.'/../inc/root.php';

\Osmium\Db\query('BEGIN;');

\Osmium\Db\query('TRUNCATE TABLE osmium.cacheexpressions;');

$q = \Osmium\Db\query('SELECT DISTINCT preexpression AS expressionid
FROM eve.dgmeffects
JOIN eve.dgmtypeeffects ON dgmtypeeffects.effectid = dgmeffects.effectid
JOIN osmium.invships ON invships.typeid = dgmtypeeffects.typeid
UNION
SELECT DISTINCT preexpression AS expressionid
FROM eve.dgmeffects
JOIN eve.dgmtypeeffects ON dgmtypeeffects.effectid = dgmeffects.effectid
JOIN osmium.invmodules ON invmodules.typeid = dgmtypeeffects.typeid
UNION
SELECT DISTINCT postexpression AS expressionid
FROM eve.dgmeffects
JOIN eve.dgmtypeeffects ON dgmtypeeffects.effectid = dgmeffects.effectid
JOIN osmium.invmodules ON invmodules.typeid = dgmtypeeffects.typeid
UNION
SELECT DISTINCT preexpression AS expressionid
FROM eve.dgmeffects
JOIN eve.dgmtypeeffects ON dgmtypeeffects.effectid = dgmeffects.effectid
JOIN osmium.invskills ON invskills.typeid = dgmtypeeffects.typeid 
AND invskills.groupid IN '.\Osmium\Dogma\USEFUL_SKILLGROUPS);
while($row = \Osmium\Db\fetch_row($q)) {
	echo $row[0]."\n";

	$exp = \Osmium\Dogma\get_expression_uncached($row[0]);
	\Osmium\Db\query_params('INSERT INTO osmium.cacheexpressions (expressionid, exp) VALUES ($1, $2)', array($row[0], serialize($exp)));
}

\Osmium\Db\query('COMMIT;');