require __DIR__.'/../inc/root.php';

/* Test the DPS of a typical setup, with stacking penalties. */

\Osmium\Fit\create($fit);
\Osmium\Fit\select_ship($fit, 24692); /* Abaddon */
\Osmium\Fit\add_module($fit, 0, 3057); /* Mega Pulse Laser II */
\Osmium\Fit\add_charge($fit, 'mypreset', 'high', 0, 262); /* Multifrequency L */
\Osmium\Fit\use_preset($fit, 'mypreset');

function printDPS($fit) {
	$rof = \Osmium\Dogma\get_module_attribute($fit, 'high', 0, 'speed') / 1000;
	echo "RoF: ".round($rof, 2)."s";

	$dmg =  \Osmium\Dogma\get_charge_attribute($fit, 'mypreset', 'high', 0, 'emDamage');
	$dmg += \Osmium\Dogma\get_charge_attribute($fit, 'mypreset', 'high', 0, 'explosiveDamage');
	$dmg += \Osmium\Dogma\get_charge_attribute($fit, 'mypreset', 'high', 0, 'kineticDamage');
	$dmg += \Osmium\Dogma\get_charge_attribute($fit, 'mypreset', 'high', 0, 'thermalDamage');
	$dmg *= \Osmium\Dogma\get_module_attribute($fit, 'high', 0, 'damageMultiplier');

	echo "\tAlpha: ".round($dmg);
	echo "\tDPS: ".round($dmg / $rof, 2)."\n";
}

printDPS($fit);

\Osmium\Fit\add_module($fit, 0, 2364); /* Heat Sink II */
printDPS($fit);

\Osmium\Fit\add_module($fit, 1, 2364);
printDPS($fit);

\Osmium\Fit\add_module($fit, 2, 2364); 
printDPS($fit);

\Osmium\Fit\add_module($fit, 3, 2364);
printDPS($fit);
